<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nl.qrk.currencytextviewdemo.MainActivity">

    <nl.qrk.currencytextview.CurrencyTextView
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="€13.37"
        app:digitsTextSize="25sp"
        app:euroTextSize="40sp"
        app:eurosignTextSize="12sp"
        fontPath="AlexBrush-Regular.ttf"
         />

    <nl.qrk.currencytextview.CurrencyTextView
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="€13.37"
        android:textSize="50sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom fonts!"
        fontPath="AlexBrush-Regular.ttf"
        android:textSize="20sp"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        tools:ignore="MissingPrefix" />
</LinearLayout>
